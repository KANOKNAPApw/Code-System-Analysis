<!-- ===== Detail ===== -->
<div class="app detail" id="detail">
  <img src="https://images.unsplash.com/photo-1517701604599-bb29b565090c">
  <h2 id="dName">Latte</h2>
  <p>กาแฟนมรสนุ่ม หอมละมุน</p>

  <div class="qty">
    <button onclick="changeQty(-1)">-</button>
    <div id="qty">1</div>
    <button onclick="changeQty(1)">+</button>
  </div>

  <button class="btn" onclick="addToCart()">เพิ่มลงตะกร้า</button>
</div>

<!-- ===== Cart ===== -->
<div class="app cart" id="cart">
  <h2>ตะกร้า</h2>
  <div id="cartList"></div>
  <div class="footer-bar">
    <div class="row">
      <div>รวม</div>
      <div id="total">฿0</div>
    </div>
    <button class="btn" style="margin-top:10px;background:#fff;color:#6b4a3a">ชำระเงิน</button>
  </div>
</div>

<!-- ===== Nav ===== -->
<div class="nav" id="nav" style="display:none">
  <button onclick="showHome()">หน้าแรก</button>
  <button onclick="showCart()">ตะกร้า</button>
</div>

<script>
let qty=1
let current={name:'',price:0}
let cart=[]

function enterApp(){
  loginScreen.style.display='none'
  app.style.display='block'
  nav.style.display='flex'
}

function openDetail(name,price){
  current={name,price}
  qty=1
  dName.innerText=name
  document.getElementById('qty').innerText=qty
  app.style.display='none'
  detail.style.display='block'
}

function changeQty(v){
  qty=Math.max(1,qty+v)
  document.getElementById('qty').innerText=qty
}

function addToCart(){
  cart.push({...current,qty})
  showCart()
}

function showHome(){
  hideAll(); app.style.display='block'
}
function showCart(){
  hideAll(); cartDiv(); cart.style.display='block'
}
function hideAll(){app.style.display='none';detail.style.display='none';cart.style.display='none'}

function cartDiv(){
  let html=''
  let total=0
  cart.forEach(i=>{
    total+=i.price*i.qty
    html+=`<div class="cart-item">
      <img src="https://images.unsplash.com/photo-1517701604599-bb29b565090c">
      <div>
        <div>${i.name}</div>
        <div>${i.qty} x ฿${i.price}</div>
      </div>
    </div>`
  })
  cartList.innerHTML=html
  totalEl = document.getElementById('total')
  totalEl.innerText='฿'+total
}
</script>

